# This file is generated by Nx.
#
# Build the docker image with `npx nx docker-build stock-api`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t stock-api`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system stock-api && \
          adduser --system -G stock-api stock-api

COPY dist/apps/stock-api stock-api
RUN chown -R stock-api:stock-api .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix stock-api --omit=dev -f install

CMD [ "node", "stock-api" ]
